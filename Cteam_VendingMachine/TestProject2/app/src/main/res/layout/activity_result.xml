<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:orientation="vertical"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:textColor="#3F51B5"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자판기 잔돈 반환"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_shin"
            android:layout_width="150dp"
            android:layout_height="131dp"
            android:src="@drawable/shin" />
        <ImageView
            android:id="@+id/img_jin"
            android:layout_width="150dp"
            android:layout_height="131dp"
            android:src="@drawable/jin" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_yeol"
            android:layout_width="150dp"
            android:layout_height="131dp"
            android:src="@drawable/yeol" />

        <ImageView
            android:id="@+id/img_hc"
            android:layout_width="150dp"
            android:layout_height="131dp"
            android:src="@drawable/hc" />

            <ImageView
                android:id="@+id/img_ran"
                android:layout_width="150dp"
                android:layout_height="131dp"
                android:src="@drawable/question" />

        </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/tv_sub"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잔액 : 0원 "
            android:layout_gravity="center" />
        <TextView

            android:id="@+id/tv_sub1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문 라면 목록"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/tv_sub2"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center"/>
        <TextView

            android:id="@+id/tv_sub3"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주문 라면 목록"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_sub4"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_sub5"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center"/>


    </LinearLayout>
</ScrollView>
</LinearLayout>